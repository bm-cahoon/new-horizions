# Dockerfile for backend

# Install node and dependencies
FROM node:14

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

# Expose the port your app runs on
EXPOSE 3000

# Optionally set environment variables at build time
ARG OPENAI_API_KEY
ENV OPENAI_API_KEY=${OPENAI_API_KEY}

# Start the application
CMD ["node", "server.js"]
